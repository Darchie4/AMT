<section class="mt-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-7 col-lg-5">
        <div class="p-md-5 bg-light rounded">
          <h2 class="mb-4">Log ind</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:'signin-form') do |f| %>
            <div class="form-group">
              <%= f.label :email %><br/>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :adgangskode %><br/>
              <%= f.password_field :password, autocomplete: "current-password", class:'form-control' %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group mb-2 mt-2">
                <%= f.check_box :remember_me %>
                <%= f.label :husk_mig %>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.submit "Log ind", class:'form-control btn btn-success rounded submit px-3' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>

</section>


