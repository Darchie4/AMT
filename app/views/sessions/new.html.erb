<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <%= form_with(url: login_path, local: true, method: :post, class: "mt-2") do |f| %>
            <div class="mb-2">
              <%= f.label :email, class: "form-label" %>
              <%= f.text_field :email, class: "form-control", required: true %>
            </div>
            <div class="mb-4">
              <%= f.label :adgangskode, class: "form-label" %>
              <%= f.password_field :adgangskode, class: "form-control", required: true %>
            </div>
            <div class="mb-3 form-check">
              <%= f.check_box :husk_mig, class: "form-check-input" %>
              <%= f.label :husk_mig, class: "form-check-label" %>
            </div>
            <div class="d-grid">
              <%= f.submit "Log ind", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>